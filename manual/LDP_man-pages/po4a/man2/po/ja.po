msgid "to measure accesses"
msgstr ""

#. type: TP
#: build/C/man2/perf_event_open.2:636
#, no-wrap
msgid "B<PERF_COUNT_HW_CACHE_RESULT_MISS>"
msgstr "B<PERF_COUNT_HW_CACHE_RESULT_MISS>"

#. type: Plain text
